
<table width="100%" cellpadding="0" cellspacing="0" bgcolor="#f0f0f0">
  <tr>
    <td align="center">
      <table width="600" cellpadding="0" cellspacing="0">
        <!-- Header -->
        <tr>
          <td
            bgcolor="#ffffff"
            style="
              padding: 10px 0;
              text-align: center;
              display: flex;
              align-items: center;
              justify-content: center!important;
            "
          >
            <img
              src="<%= LOGO_URL %>"
              width="60px"
              height="100%"
              />
            <h1>&nbsp;&nbsp;<%= APP_NAME %></h1>
          </td>
        </tr>

        <!-- Email Content -->
        <tr>
          <td
            bgcolor="#ffffff"
            style="
            padding-top: 0px;
              padding-bottom: 30px;
              padding-left: 20px;
              padding-right: 20px;
            "
          >
            <hr />
            <div style="margin-top: 50px">
              <h2 style="margin-bottom: 25px">Password Reset Request üîê</h2>
              <p>
                You have requested to reset your password for <%= @user.email %> at <%= APP_NAME %>.
              </p>
              <div>
                <p>
                  To reset your password, please click the following button:
                </p>
                <a
                  href="<%= @reset_password_url %>"
                  target="_blank"
                  style="
                  margin-top: 10px;
                    text-decoration: none;
                    background-color: #7367f0;
                    color: #ffffff;
                    padding: 10px 20px;
                    display: inline-block;
                    border-radius: 5px;
                    font-weight: bold;
                    text-align: center;
                  "
                >Reset Password</a
                >
              </div>
              <br />
              <p>
                If you did not request this password reset, please ignore
                this email.
              </p>
              <p style="color: dimgray;padding-top: 10px;">
                <i>This email is valid only for a short period of time and will expire upon first use.</i>
              </p>
            </div>
          </td>
        </tr>
        <!-- Footer -->
        <tr>
          <td
            bgcolor="#7367F0"
            style="padding: 0px 20px; text-align: center"
          >
            <p style="color: #ffffff">
              &copy; <%= "#{Time.now.year} #{APP_NAME}" %>. All rights reserved.
            </p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>